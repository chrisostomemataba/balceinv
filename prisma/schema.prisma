generator client {
  provider = "prisma-client"
}

datasource db {
  provider = "sqlite"
}

// ---------------- USERS ----------------
model User {
  id           Int       @id @default(autoincrement())
  name         String
  email        String    @unique
  passwordHash String
  roleId       Int
  role         Role      @relation(fields: [roleId], references: [id])
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  
  sessions     Session[]
  sales        Sale[]    
}

// ---------------- ROLES ----------------
model Role {
  id    Int    @id @default(autoincrement())
  name  String @unique
  users User[]
}

// ---------------- SESSIONS (Refresh tokens) ----------------
model Session {
  id           Int      @id @default(autoincrement())
  user         User     @relation(fields: [userId], references: [id])
  userId       Int

  refreshToken String   @unique
  expiresAt    DateTime
  createdAt    DateTime @default(now())
}

// ---------------- LOGIN LOGS ----------------
model LoginLog {
  id        Int      @id @default(autoincrement())
  userId    Int
  loginTime DateTime @default(now())
}

// ---------------- PRODUCTS ----------------
model Product {
  id        Int      @id @default(autoincrement())
  name      String
  sku       String   @unique
  price     Decimal  
  costPrice Decimal 
  quantity  Int
  createdAt DateTime @default(now())

  saleItems      SaleItem[]
  stockMovements StockMovement[]
}

// ---------------- SALES ----------------
model Sale {
  id          Int         @id @default(autoincrement())
  user        User        @relation(fields: [userId], references: [id])
  userId      Int

  totalAmount Decimal     
  paymentType PaymentType
  createdAt   DateTime    @default(now())

  items       SaleItem[]
}

enum PaymentType {
  cash
  card
}

// ---------------- SALE ITEMS ----------------
model SaleItem {
  id        Int     @id @default(autoincrement())
  sale      Sale    @relation(fields: [saleId], references: [id])
  saleId    Int

  product   Product @relation(fields: [productId], references: [id])
  productId Int

  quantity   Int
  unitPrice  Decimal 
  totalPrice Decimal 
}

// ---------------- STOCK MOVEMENTS ----------------
model StockMovement {
  id        Int            @id @default(autoincrement())
  product   Product        @relation(fields: [productId], references: [id])
  productId Int

  change    Int
  reason    MovementReason
  createdAt DateTime       @default(now())
}

enum MovementReason {
  sale
  adjustment
  purchase
}